<html>
    <head>
        <title>WeChat</title>
        <meta charset="utf-8">
        <script src="jquery.js"></script>
        <script src="https://dongchat.herokuapp.com/socket.io/socket.io.js"></script>
        <script src="process.js"></script>
        <link rel="stylesheet" type="text/css" href="layout.css"/>

    </head>

    <body>
        <div id="wrapper">
            <h2 id ="welcome">===== Welcome to WeChat =====</h2>
            <div id="loginForm">
                <h3>What's your name ?</h3>
                <input type="text" id="txtUsername"/>
                <input type="button" value="Register" id="btnRegister"/>
            </div>
            <div id="chatForm">
                <div id="left">
                    <div id="boxUsers">Users Online</div>
                    <div id="boxContent"></div>
                </div>

                <div id="right">
                    <div id="sayHi">
                        Hello <span id="currentUser">AAA</span>
                        <input type="button" id="btnLogout" value="Logout"/>
                    </div>
                    <div id="listMessages"></div>
                    <div>
                        <input type="text" id="txtMessages"/>
                        <input type="button" id="btnSendMessage" value="Send" />
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>